{% extends 'base.html.twig' %}

{% block title %}Rendez-vous{% endblock %}

{% block body %}
    <h1>Rendez-vous</h1>

    <a href="{{ path('appointment_new') }}">Cr√©er un nouveau RDV</a>

    <ul>
        {% for appointment in appointments %}
            <li>
                {{ appointment.date }} - {{ appointment.status }}
                <a href="{{ path('appointment_edit', {'id': appointment.id}) }}">Editer</a>
                <form action="{{ path('appointment_delete', {'id': appointment.id}) }}" method="post" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ appointment.id) }}">
                    <button type="submit">Supprimer</button>
                </form>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
